extends ../node_modules/jade-bootstrap/_bootstrap

append styles
    link(rel="stylesheet", href="/stylesheets/style.css")

block body
    - var style = (typeof style === 'undefined') ? "default" : style
    - var href = (typeof style === 'undefined') ? "#" : href
    nav( role="navigation", class=["navbar", "navbar-" + style] )
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#dropdown_menu", aria-expanded="false", aria-controls="navbar")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href=href)= "Colenso"
        .collapse.navbar-collapse( id="dropdown_menu" )
            ul.nav.navbar-nav.navbar-left
                +nav_item("/", "active") Home
                +nav_item("/browse", "active") Browse
                +nav_item("/test", "active") Test
            form.navbar-form.navbar-right(action="/search", method="get")
                .form-group
                    input.form-control(type='text', placeholder='Search', name='searchString')
                button.btn.btn-default(type='submit') Submit
    .container
        h1= title

    block content



